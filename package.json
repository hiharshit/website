{
  "name": "personal-website",
  "type": "module",
  "scripts": {
    "dev": "bun scripts/dev.mjs",
    "build": "bun scripts/optimize-images.mjs && bun scripts/build.mjs",
    "build:force": "bun scripts/optimize-images.mjs --force && bun scripts/build.mjs --force",
    "clean": "bun scripts/clean.mjs",
    "images": "bun scripts/optimize-images.mjs",
    "images:force": "bun scripts/optimize-images.mjs --force",
    "new": "bun scripts/new-post.mjs",
    "serve": "bunx http-server -p 3000 -c-1",
    "start": "bun run build && bunx http-server -p 3000 -c-1",
    "test": "bun test",
    "lint": "eslint js scripts",
    "lint:fix": "eslint js scripts --fix",
    "format": "prettier --write \"**/*.{js,mjs,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,json,css,md}\""
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "browser-sync": "^3.0.3",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  }
}